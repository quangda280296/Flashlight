<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_interact_noti"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_noti_flashlight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:text="@string/home"
            android:textColor="@android:color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_flash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_flash"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_noti_flash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_compass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_compass"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_noti_compass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:text="@string/compass"
            android:textColor="@android:color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wifi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_noti_wifi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:text="@string/wifi"
            android:textColor="@android:color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_gprs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_gprs"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_noti_gprs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:text="@string/gprs"
            android:textColor="@android:color/black"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>