<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_stage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.7"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:onClick="flashlight"
                android:src="@drawable/splash_flashlight" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/lbl_flashlight" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:onClick="compass"
                android:src="@drawable/splash_compass" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/lbl_compass" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_adview" />

    <include
        layout="@layout/layout_dialog"
        android:visibility="gone" />
</FrameLayout>